<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    tools:context="com.example.eduardopalacios.logindisplay.formulario">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear cuenta"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#419ff7"/>
    <EditText
        style="@style/editText_style"
        android:id="@+id/campoNombre"
        android:hint="Nombre"
        />
    <EditText

        android:id="@+id/campoTelefono"
        android:hint="Teléfono"
        style="@style/editText_style"
       />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/correo"
        android:hint="Correo"
        android:background="@drawable/shapecamposformularios"
        android:layout_margin="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/contraseña"
        android:hint="Contraseña"
        android:background="@drawable/shapecamposformularios"
        android:layout_margin="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/Confirmar_contraseña"
        android:hint="Confirmar contraseña"
        android:background="@drawable/shapecamposformularios"
        android:layout_margin="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="4"
        android:gravity="center">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:textColor="#ffffff"
            android:layout_weight="2"
            android:layout_margin="20dp"
            android:background="@drawable/shapebutton"
            android:backgroundTint="#419ff7"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Aceptar"
            android:layout_weight="2"
            android:layout_margin="20dp"
            android:background="@drawable/shapebutton"
            android:backgroundTint="#419ff7"
            android:textColor="#ffffff"/>

    </LinearLayout>

</LinearLayout>
